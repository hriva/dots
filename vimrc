:syntax on

set encoding=UTF-8

:set t_Co=256

:set noerrorbells

:set expandtab
:set smarttab
:set tabstop=4 
:set softtabstop=4
:set shiftwidth=4

:set smartindent
:set autoindent

:set number relativenumber

:set nowrap
:set incsearch
:set clipboard=unnamedplus

:set smartcase

:set noswapfile
:set nobackup
:set undodir=~/.vim/undodir
:set undofile
